{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron Main",
            "runtimeExecutable": "${workspaceRoot/src/node_modules/.bin/electron-forge-vscode-nix",
            "windows": {
              "runtimeExecutable": "${workspaceRoot}/src/node_modules/.bin/electron-forge-vscode-win.cmd"
            },
            // runtimeArgs will be passed directly to your Electron application
            "runtimeArgs": [
              "foo",
              "bar"
            ],
            "cwd": "${workspaceRoot}"
          }
    ]
}